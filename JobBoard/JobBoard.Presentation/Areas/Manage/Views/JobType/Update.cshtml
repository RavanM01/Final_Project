@model GetJobTypeDto

<!-- Page Heading -->
<div style="gap: 1rem" class="d-sm-flex flex-column align-items-start mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        Update Position - @Model.Name
    </h1>

    <form class="row col-8" method="post" asp-route-id="@Model.Id" asp-action="Update">
        <div style="padding: 0" class="form-group flex-column gap-2 d-flex col-12">
            <label asp-for="Name">Name of a position</label>
            <input value="@Model.Name" asp-for="Name" placeholder="Enter name of a position">
        </div>
        <button type="submit" class="btn btn-primary">
            Submit
        </button>
    </form>
</div>