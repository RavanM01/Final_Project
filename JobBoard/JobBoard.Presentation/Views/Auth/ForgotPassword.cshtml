@model ForgotPasswordDto
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Reset Page</h2>
                        <ul>
                            <li>
                                <a asp-action="index" asp-controller="home">Home</a>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Reset Password</h4>
                            <div class="row">
                                <div class="col-lg-12">
                                    <label asp-for="Email">Email*</label>
                                    <input asp-for="Email" placeholder="Email" />
                                </div>
                                <div asp-validation-summary="All"></div>
                                <div class="col-lg-12 pt-5">
                                    <button class="btn btn-custom-size lg-size btn-primary">
                                        Reset
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</main>